<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <data>

        <import type="android.view.View" />

        <variable
            name="onPrintClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onSelectImageClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onSetupClick"
            type="android.view.View.OnClickListener" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="200dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/setup" />

        <Button
            android:id="@+id/setup"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> onSetupClick.onClick(v)}"
            android:text="Setup"
            app:layout_constraintBottom_toTopOf="@+id/select_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view" />

        <Button
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> onSelectImageClick.onClick(v)}"
            android:text="Select Image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/print"
            app:layout_constraintTop_toBottomOf="@+id/setup" />

        <Button
            android:id="@+id/print"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> onPrintClick.onClick(v)}"
            android:text="Print"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_image" />

    </android.support.constraint.ConstraintLayout>

</layout>